# =====================================================
# APTOCOM - ENVIRONMENT CONFIGURATION TEMPLATE
# =====================================================
# Copy this file to .env and fill in your actual values
# =====================================================

# =================
# AI SERVICE (Groq)
# =================
GROQ_API_KEY=your_groq_api_key_here
# Alternative: OpenAI (if switching later)
# OPENAI_API_KEY=your_openai_api_key_here

# =================
# DATABASE (MongoDB)
# =================
MONGODB_USER=your_mongodb_username
MONGODB_PASSWORD=your_mongodb_password
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?appName=aptocom
MONGODB_DB_NAME=aptocom

# =================
# IPFS STORAGE (nft.storage)
# =================
NFT_STORAGE_API_KEY=your_nft_storage_api_key_here

# =================
# APTOS NETWORK
# =================
APTOS_NETWORK=testnet
APTOS_CHAIN_ID=2022
APTOS_RPC_URL=https://fullnode.testnet.aptoslabs.com/v1
APTOS_EXPLORER_URL=https://explorer.aptoslabs.com/testnet
APTOS_FAUCET_URL=https://faucet.testnet.aptoslabs.com/

# =================
# SERVICE WALLET (Petra)
# =================
SERVICE_WALLET_PRIVATE_KEY=your_wallet_private_key_here
SERVICE_WALLET_ADDRESS=your_wallet_address_here

# =================
# SMART CONTRACT ADDRESSES (fill after deployment)
# =================
TOKEN_CONTRACT_ADDRESS=
GOVERNANCE_CONTRACT_ADDRESS=
TREASURY_CONTRACT_ADDRESS=

# =================
# SERVER CONFIGURATION
# =================
PORT=5000
NODE_ENV=development

# =================
# FRONTEND URL (for CORS)
# =================
FRONTEND_URL=http://localhost:3000

# =================
# SECURITY & LOGGING
# =================
LOG_LEVEL=debug
JWT_SECRET=generate_random_secret_here

# =================
# OPTIONAL SERVICES
# =================
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET=
# VERCEL_TOKEN=
