# AptoCom Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5000
NODE_ENV=development

# Aptos Blockchain Configuration
APTOS_NETWORK=testnet
APTOS_RPC_URL=https://fullnode.testnet.aptoslabs.com/v1

# Smart Contract Addresses (from deployment)
TOKEN_CONTRACT_ADDRESS=0x346a0fa67d42e63c5d713914fe46cb4ed38f011d21004122e3784b28437a1f3d
GOVERNANCE_CONTRACT_ADDRESS=0x346a0fa67d42e63c5d713914fe46cb4ed38f011d21004122e3784b28437a1f3d
TREASURY_CONTRACT_ADDRESS=0x346a0fa67d42e63c5d713914fe46cb4ed38f011d21004122e3784b28437a1f3d

# Service Wallet (Backend wallet for automated transactions)
# WARNING: Never commit actual private keys to Git!
SERVICE_WALLET_PRIVATE_KEY=your_private_key_here

# AI Service (Groq API for proposal evaluation)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=mixtral-8x7b-32768

# Alternative AI (OpenAI - optional backup)
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-4

# MongoDB Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/aptocom?retryWrites=true&w=majority
MONGODB_DATABASE=aptocom

# IPFS Storage (nft.storage)
NFT_STORAGE_API_KEY=your_nft_storage_api_key_here

# CORS (Frontend URLs allowed to access API)
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
